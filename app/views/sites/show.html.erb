<% content_for :title do %><%= @site.slug %><% end %>

<h1><%= @site.slug %><div id="site_status"></div></h1>

<%= render :partial => "entries/entry", :collection => @site.pages[@page-1] %>

<div class="pages">
pages
<% (1..@site.pages.length).each do |page| %>
  <a href="<%= url_for(@site) %>/page/<%= page %>"><%= page %></a>
<% end %>
</div>
